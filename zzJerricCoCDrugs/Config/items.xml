	<property name="EconomicValue" value="250"/>
	<property name="Stacknumber" value="100"/>
	<property name="CarryWeight" value="0.05"/>
	<effect_group tiered="false">
		<display_value name="dCarryCapacity" value="500"/>
		<display_value name="dDuration" value="15"/>
		<triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="$BuffJerricDuration" operation="add" value="903"/>
