<buff name="buffJerric" name_key="buffJerric" description_key="buffJerricDesc" icon="ui_game_symbol_pack_mule">
	<stack_type value="replace"/>
	<duration value="0"/>
	<display_value value=".BuffJerricDisplay"/>
	<display_value_format value="time"/>
	<effect_group>
		<triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$BuffJerricDuration" operation="set" value="903"/>
