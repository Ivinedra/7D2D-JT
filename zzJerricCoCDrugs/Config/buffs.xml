		<triggered_effect trigger="onSelfBuffRemove" action="ModifyCVar" cvar=".BuffJerricDisplay" operation="set" value="0"/>
		<triggered_effect trigger="onSelfBuffRemove" action="ModifyCVar" cvar="$BuffJerricDuration" operation="set" value="0"/>
